@page
@model PaymentOptionsModel
@{
    ViewData["Title"] = "Manage you payment methods";
}
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-4">
        <p>Options:</p>
        <p><a href="">Add a Payment Method</a></p>
        <p><a href="">Remove a Payment Method</a></p>
        <p><a href="">Block a Payment Method</a></p>
    </div>

    <div class="col-md-8">
        <p>Ways to Pay:</p>
        <p>
            <div class="row">
                <div class="col-md-2">
                    <img src="~/images/cards/american_express.png" />
                </div>
                <div class="col-md-2">
                    <img src="~/images/cards/visa.png" />
                </div>
                <div class="col-md-2">
                    <img src="~/images/cards/paypal.png" />
                </div>
                <div class="col-md-2">
                    <img src="~/images/cards/apple.jpg" />
                </div>
                <div class="col-md-2">
                    <img src="~/images/cards/android_pay.png" />
                </div>
                <div class="col-md-2">
                  
                    <img src="~/images/cards/CARDSTREAM.jpg" />
                </div>
            </div>
        </p>
    </div>
</div>
